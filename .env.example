# Database
DATABASE_URL=postgresql://user:password@host:5432/database

# Google OAuth (for GA4 and Google Sheets integration)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# LinkedIn OAuth (optional - for LinkedIn Ads integration)
# Configure these in Google Cloud Console OAuth redirect URIs

# Session Management
SESSION_SECRET=your-random-session-secret

# Email Configuration
EMAIL_PROVIDER=smtp # Options: smtp, sendgrid, mailgun
EMAIL_FROM_ADDRESS=alerts@yourdomain.com

# SMTP Configuration (if using EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid Configuration (if using EMAIL_PROVIDER=sendgrid)
# SENDGRID_API_KEY=your-sendgrid-api-key

# Mailgun Configuration (if using EMAIL_PROVIDER=mailgun)
# MAILGUN_SMTP_HOST=smtp.mailgun.org
# MAILGUN_SMTP_USER=your-mailgun-user
# MAILGUN_SMTP_PASS=your-mailgun-password

# Snapshot Scheduler (optional)
SNAPSHOT_FREQUENCY=daily # Options: hourly, daily, weekly

# Server Configuration
PORT=5000
NODE_ENV=development
